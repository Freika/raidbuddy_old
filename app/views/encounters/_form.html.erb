<%= simple_form_for encounter do |f| %>
<div class="form-group">
  <%= f.input :name, label: 'Название энкаунтера', class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.input :style, collection: Encounter::STYLE, include_blank: false,
    label: 'Тип', class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.input :description, label: 'Описание', class: 'form-control', input_html: { rows: 5 } %>
</div>
<div class="form-group">
  <%= f.input :expansion, collection: Encounter::EXPANSIONS, include_blank: false,
    label: 'Дополнение', class: 'form-control' %>
</div>

  <%= f.button :submit, value: 'Сохранить энкаунтер', class: 'btn btn-primary' %>
<% end %>
